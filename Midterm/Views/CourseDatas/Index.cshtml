@model IEnumerable<Midterm.Models.CourseData>

@{
    ViewBag.Title = "Index";
}

<h2>Index @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary pull-right" })</h2>


<table class="table col-sm-12">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseCost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary col-xs-12 col-lg-4" }) 
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info col-xs-12 col-lg-4" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger col-xs-12 col-lg-4" })
        </td>
    </tr>
}

</table>
